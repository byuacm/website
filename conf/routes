# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET			/					controllers.Assets.at(path="/public", file="index.html")

# Events
GET			/events				controllers.EventsController.getEvents()

# Challenges
GET			/challenges			controllers.ChallengesController.getChallenges()
GET			/challenges/:id		controllers.ChallengesController.getChallenge(id: Long)

# User pages
GET			/profile/:id		controllers.UsersController.getProfile(id: Long)
GET			/register/cas		controllers.UsersController.register()
GET			/login/cas			controllers.UsersController.login()
# GET			/authenticate/cas	controllers.UsersController.authenticateCas()

# As a last resort, try to find a static file that matches the request.
GET			/*file				controllers.Assets.at(path="/public", file)
